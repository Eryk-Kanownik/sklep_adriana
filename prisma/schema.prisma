generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ProductObject {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  category    String
  price       Int
  sizes       Size[]
}

model Size {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  size            String
  amount          Int
  productObject   ProductObject? @relation(fields: [productObjectId], references: [id])
  productObjectId String?        @db.ObjectId
}
