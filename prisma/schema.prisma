generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ProductObject {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
}

model Pants {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  sizes       PantsSize[]
}

model PantsSize {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  pants    Pants?  @relation(fields: [pantsId], references: [id])
  pantsId  String? @db.ObjectId
  quantity Int
}

model Gloves {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Balaclavas {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
